#!/bin/bash
# RoadPad - Terminal-native plain-text editor for BlackRoad OS
# Usage: roadpad [file]

ROADPAD_DIR="${ROADPAD_DIR:-$HOME/roadpad}"

# Check Python availability
if ! command -v python3 &> /dev/null; then
    echo "Error: python3 required"
    exit 1
fi

# Run the editor
cd "$ROADPAD_DIR" && python3 roadpad.py "$@"
